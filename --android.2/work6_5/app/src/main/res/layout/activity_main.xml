<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextView01" android:layout_gravity="center_horizontal" android:text="媒体播放器" android:textSize="24sp"/>
    <SurfaceView android:layout_width="240dp" android:layout_height="320dp" android:layout_gravity="center" android:id="@+id/surfaceView1"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center">
        <Button android:layout_width="80dp" android:layout_height="40dp" android:id="@+id/play1" android:textSize="18sp" android:text="播放"/>
        <Button android:layout_width="80dp" android:layout_height="40dp" android:id="@+id/stop1" android:textSize="18sp" android:text="停止"/>
    </LinearLayout>
</LinearLayout>