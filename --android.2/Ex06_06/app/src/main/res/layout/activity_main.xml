<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/text1" android:layout_x="5px" android:layout_y="10px" android:text="播放系统资源中的音乐" android:textSize="20sp"/>
    <ImageButton android:id="@+id/stop" android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_y="95dp" android:layout_x="2dp" android:src="@drawable/music_stop"/>
    <ImageButton android:id="@+id/play" android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_x="75dp" android:layout_y="95dp" android:src="@drawable/music_play"/>
    <ImageButton android:id="@+id/pause" android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_y="96dp" android:layout_x="146dp" android:src="@drawable/music_pause"/>
    <CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/check1"
              android:layout_x="15dp" android:layout_y="186dp" android:textSize="20sp" android:text="播放系统中的音乐"/>
    <CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/check2"
              android:layout_x="15dp" android:layout_y="242dp" android:textSize="20sp" android:text="播放SD卡中的音乐"/>
</AbsoluteLayout>