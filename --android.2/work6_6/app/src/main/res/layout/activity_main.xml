<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <com.example.work6_6.MyView android:layout_width="fill_parent" android:layout_height="246dp" android:scaleType="fitCenter" android:id="@+id/imageView1" android:layout_weight="1"/>
    <TableLayout android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:shrinkColumns="1,2,3,4,5">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X:" android:textSize="20sp"/>
            <EditText android:id="@+id/editText1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="1"/>
            <EditText android:id="@+id/editText2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
            <EditText android:id="@+id/editText3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y:" android:textSize="20sp"/>
            <EditText android:id="@+id/editText4" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
            <EditText android:id="@+id/editText5" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="1"/>
            <EditText android:id="@+id/editText6" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z:" android:textSize="20sp"/>
            <EditText android:id="@+id/editText7" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
            <EditText android:id="@+id/editText8" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="0"/>
            <EditText android:id="@+id/editText9" android:layout_height="wrap_content" android:layout_width="wrap_content" android:ems="3" android:text="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button2" android:layout_gravity="center_horizontal" android:text="上一张" android:textSize="20sp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button1" android:layout_gravity="center_horizontal" android:text="变换" android:textSize="20sp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button3" android:layout_gravity="center_horizontal" android:text="下一张" android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>