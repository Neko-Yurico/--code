<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mbutton1" android:textSize="20px" android:text="启动线程"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/sbutton1" android:text="停止线程" android:textSize="20px"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt1" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:padding="16dp" android:textSize="24dp" tools:context=".MainActivity"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mbutton2" android:textSize="20px" android:text="启动线程"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/sbutton2" android:text="停止线程" android:textSize="20px"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt2" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:padding="16dp" android:textSize="24dp" tools:context=".MainActivity"/>
</LinearLayout>